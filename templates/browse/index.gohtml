<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Browse Appointments</title>
    </head>
    <body>
        <h1>Here are your appts, {{.Username}}</h1>
        <form method="POST">
            <input type="text" name="search" />
            <input type="submit" />
        </form>
        
        <ul>
        {{$Name := .Username}}
        {{range .Appointments}}
        {{$Name}}: <li>{{.Id}}, {{.Customer}}</li>
        {{end}}
        </ul>
    </body>
</html>